---
import NotesForm from './NotesForm.astro';
const { SteamId } = Astro.props;
---

<dialog id='notesDialog' class='notesDialog glassmorphism'>
	<header>
		<h3 id='noteTitle' class='title text-2xl'>Notes Dialog astro</h3>
		<button id='closeNotesButton'>X</button>
	</header>

	<div id='notesFormContainer'>
		<NotesForm SteamId={SteamId} /> 
	</div>
	
</dialog>

<script>
	const notesDialog = document.getElementById('notesDialog');
	const closeNotesButton = document.getElementById('closeNotesButton');

	closeNotesButton.addEventListener('click', () => {
		notesDialog.close();
	});
</script>

<style>
	.notesDialog {
		max-width: 73ch;
		width: 80%;
		background-color: var(--color-secondary);
		color: var(--font-color);
		border-radius: 0.5rem;
	}
	.notesDialog form {
		align-items: self-end;
		display: flex;
		flex-direction: column;
		gap: 1em;
		padding: 1em;
	}
	.notesDialog::backdrop {
		background-color: rgba(0, 0, 0, 0.5);
		backdrop-filter: blur(10px);
	}

	.notesDialog header {
		padding: 0 1em;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.notesDialog header .title {
		margin: 0;
		font-size: 1.25em;
	}
	.notesDialog header button {
		margin: 0.5em 0;
	}
	form {
		align-items: self-end;
		display: flex;
		flex-direction: column;
		gap: 1em;
		padding: 0 0 1em 0;
	}
	button {
		margin-bottom: 0;
	}
</style>
