---
import Layout from '../layouts/Layout.astro';
---

<style is:inline>
  body {
    background: #1e1f22;
    color: #c2c2c2;
    font-family: Arial, sans-serif; /* Added font family */
  }
  .wrapper {
    margin: 1em auto;
    justify-content: center;
    display: flex;
    flex-direction: column;
    /* width: 120ch; */
  }
  .wrapper textarea {
    background: #313338;
    color: #d1d1d1;
    border: none;
    padding: 1em 1.25em;
    border-radius: 0.5em;
    height: 18em;
    width: 95vw;
    /* text-wrap: nowrap; */
    overflow: auto; /* Added overflow for text wrap */
  }
  .wrapper button {
    margin-top: 1em;
    background: #2b2d31;
    color: #d1d1d1;
    border: none;
    padding: 1em 1.25em;
    border-radius: 0.5em;
    cursor: pointer;
  }

  .wrapper table {
    border-collapse: collapse;
    width: 100%;
    margin-top: 20px;
    border-radius: 0.5em;
    text-align: left;
    /* display: grid; */ /* Removed display grid */
  }
  thead {
    margin-top: 0.5em;
    cursor: pointer;
    background: #27272b;
    color: #d1d1d1;
    padding: 0.75em 1.25em;
  }
  tr {
    /* padding: 0.75em 1.25em; */ /* Removed padding */
    justify-content: space-between;
    /* display: grid; */ /* Removed display grid */
    /* grid-template-columns: repeat(12, 1fr); */ /* Removed grid-template-columns */
    color: #d1d1d1;
  }
  td {
    padding: 0.75em 1.25em;
    /* text-wrap: nowrap; */
    background: #2b2d31;
    color: #d1d1d1;
  }
  tbody tr {
    border-bottom: 0.25em solid #1e1f22;
    background: #2b2d31;
  }
  .hidden {
    display: none;
  }
</style>

<Layout title='BOT API '>
  <h2 class='my-8 text-2xl text-center'>GetPacks API</h2>
  <div class='wrapper'>
    <div id='tableContainer'>
      <table id='jsonTable' class='table-auto'>
        <thead>
          <tr>
            <th>packID</th>
            <th>name</th>
            <th>price</th>
            <th>description</th>
            <th>imageURL</th>
            <th>categoryName</th>
            <th>packLimit</th>
            <th>packLimitTime</th>
            <th>packLinkedLimit</th>
            <th>excludedRegions</th>
            <th>exclusiveRegions</th>
            <th>overlayHidden</th>
          </tr>
        </thead>
        <tbody id='tableBody'> </tbody>
      </table>
    </div>
  </div>
  <script>
    async function fetchData(url) {
      try {
        const response = await fetch(url, {
          method: 'GET',
          headers: {
            Accept: '*/*',
            Authorization: 'WhalleyBotAPI_rtTECwgxKLKy9Q==',
          },
        });
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }
        const data = await response.json();
        return data;
      } catch (error) {
        console.error('Error fetching or parsing data: ', error);
        throw error;
      }
    }

    async function displayJsonAsTable() {
      try {
        let allPacks = []; // Array to store all packs from all pages
        let pageNumber = 1; // Start with the first page
        let nextPageExists = true;

        while (nextPageExists) {
          // Fetch data for the current page
          const data = await fetchData(
            `https://api.whalleybot.com/bot/afd0a027/GetPacks/${pageNumber}`,
          );

          if (data && data.packData && data.packData.length > 0) {
            // Add packs from the current page to the array
            allPacks = allPacks.concat(data.packData);
            pageNumber++; // Move to the next page
          } else {
            nextPageExists = false; // No more data available, exit the loop
          }
        }

        // Clear existing table rows
        const tableBody = document.getElementById('tableBody');
        tableBody.innerHTML = '';

        // Populate table with JSON data
        allPacks.forEach((packData) => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${packData.packID}</td>
            <td>${packData.name}</td>
            <td>${packData.price}</td>
            <td>${packData.description}</td>
            <td>${packData.imageURL}</td>
            <td>${packData.categoryName}</td>
            <td>${packData.packLimit}</td>
            <td>${packData.packLimitTime}</td>
            <td>${packData.packLinkedLimit}</td>
            <td>${packData.excludedRegions}</td>
            <td>${packData.exclusiveRegions}</td>
            <td>${packData.overlayHidden}</td>
          `;
          tableBody.appendChild(row);
        });
      } catch (error) {
        console.error('Error populating table: ', error);
      }
    }

    // Call the function to display JSON data as a table
    displayJsonAsTable();
  </script>
</Layout>
