---
import Layout from '../layouts/Layout.astro';
import GetVehicles from '../components/GetVehicles.astro';
---

<Layout title='Vehicle List '>
  <div class='wrapper' transition:name='wrapper'>
    <GetVehicles />
  </div>
</Layout>

<style is:inline>
  main .wrapper {
    max-width: 140ch;
    align-items: center;
  }
  .wrapper form {
    width: 100%;
  }
  .wrapper textarea {
    height: 18em;
    text-wrap: nowrap;
  }

  #bpcCounts {
    margin-top: 1em;
    font-size: 1.5em;
    font-weight: 600;
  }
  #VehicleContainer {
    display: flex;
    flex-direction: column;
    gap: 0.25em;
    padding: 1%;
    max-width: 100%;
    overflow-x: auto;
    background: var(--color-tertiary);
    min-width: 100%;
  }
</style>
